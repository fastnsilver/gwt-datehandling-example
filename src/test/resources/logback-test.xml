<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <consolePlugin /> 
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %5p | %t | %-55logger{55} | %m %n</pattern>
        </encoder>
    </appender>
    <logger name="me.fns">
        <level value="INFO" />
    </logger>
    <logger name="org.hibernate">
        <level value="INFO" />
    </logger>
    <root>
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>